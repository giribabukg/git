<form action="index.php" name="jobFrm" method="post" enctype="multipart/form-data">
  <input type="hidden" name="act" value="{frm.act}" />
  <input type="hidden" name="jobid" value="{val.id}" />
  <input type="hidden" name="page" value="{frm.page}" />
  <input type="hidden" name="step" value="0" />
  <input type="hidden" name="clientid" value="{frm.clientid}" />
  {frm.hidden}
  <table border="0" cellpadding="0" cellspacing="0">
    <tr>
      <td valign="top" class="w740">
        <div class="tbl w740">
          <!-- start of parts -->
          {frm.parts}
          <!-- end of parts -->
        </div>
      </td>
      <td width="2"><img src='img/d.gif' width="16" border="0" alt="" /></td>
      <td style="width:225px" valign="top">
        <!-- start of buttons -->
        {frm.btn}
        <!-- end of buttons -->
      </td>
    </tr>
  </table>
</form>
